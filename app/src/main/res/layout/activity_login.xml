<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:orientation="vertical"
    android:background="@color/RDarkBlue">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginVertical="15dp"
        android:src="@mipmap/ryte_logo_foreground" />

    <TextView
        android:layout_marginTop="-30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome back."
        android:fontFamily="@font/poppins_semibold"
        android:textSize="27sp"
        android:textColor="@color/RRed"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/round_bg"
        android:backgroundTint="@color/RSunColor"
        android:orientation="vertical"
        android:paddingHorizontal="30dp"
        android:paddingVertical="20dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            app:boxStrokeColor="@color/RRed"
            app:hintTextColor="@color/RDarkBlue">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:padding="10dp"
                android:textSize="12sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textSize="12sp"
            app:boxStrokeColor="@color/RRed"
            app:hintTextColor="@color/RDarkBlue"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textSize="12sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_bg"
            android:fontFamily="@font/poppins"
            android:text="LOG IN"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            app:backgroundTint="@color/RRed" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="#00000000"
            android:fontFamily="@font/poppins"
            android:text="- OR -"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:textAllCaps="false"
            android:textColor="@color/kGreyColor"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_bg_google"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/google" />

            <Button
                android:id="@+id/btn_loginwithGoogle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/kRedGoogleButton"
                android:fontFamily="@font/poppins"
                android:text="Login with Google"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="5dp" />


        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="#00000000"
            android:fontFamily="@font/poppins"
            android:text="Dont have account yet?"
            android:gravity="center_horizontal"
            android:textAllCaps="false"
            android:textColor="@color/kGreyColor"
            android:textSize="12sp" />


        <Button
            android:id="@+id/btn_regis"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="-10dp"
            android:background="#00000000"
            android:fontFamily="@font/poppins"
            android:text="Create an account"
            android:textAllCaps="false"
            android:textColor="@color/RRed"
            android:textSize="12sp"
            android:textStyle="" />

    </LinearLayout>

</LinearLayout>