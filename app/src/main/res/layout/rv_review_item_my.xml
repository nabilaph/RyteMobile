<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rv_shape"
            android:backgroundTint="#ffffff"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:padding="20dp"
            android:elevation="10dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/user"/>

            <TextView
                android:id="@+id/text_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_semibold"
                android:text="Username"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_height="2dp"
                android:background="@color/kGreyColor"/>

            <TextView
                android:id="@+id/text_storyDet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins"
                android:text="Story detail"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_storyDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins"
                android:text="Tanggal Post"
                android:textColor="#000000"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end">

                <ImageView
                android:id="@+id/delete_btn"
                android:layout_marginHorizontal="5dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_delete"/>

                <ImageView
                    android:id="@+id/like_btn"
                    android:layout_marginHorizontal="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_love"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/text_likeCount"
                    android:layout_marginHorizontal="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="like count"
                    android:layout_gravity="center_vertical"
                    android:textSize="14sp"/>

            </LinearLayout>




        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>